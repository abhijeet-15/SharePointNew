<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.sharepoint.client.sharepointnew.ThirdActivity"
    android:orientation="vertical"
    android:background="#fff">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text=" Please select a price markdown function"
        android:padding="17dp"
        android:textSize="17sp"
        />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="95dp"
        android:orientation="horizontal"
        android:padding="12dp"

        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textSize="20sp"
            android:text="     First Markdown"
            android:textColor="#000"

            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_toStartOf="@+id/imageButton21"
            android:onClick="get_code1"
           />

        <ImageButton
            android:id="@+id/imageButton21"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:src="@drawable/go_icon"
            android:layout_marginEnd="13dp"
            android:background="#fff"
            android:layout_centerInParent="true"

            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:onClick="get_code1"
            />


    </RelativeLayout>


    <View
        android:layout_width="fill_parent"
        android:layout_height="2dp"
        android:background="#c0c0c0"
        android:padding="5dp"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="95dp"
        android:orientation="horizontal"
        android:padding="12dp"

        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textSize="20sp"
            android:text="     Further Price"
            android:textColor="#000"

            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_toStartOf="@+id/imageButton22"
            android:onClick="get_code2"
            />

        <ImageButton
            android:id="@+id/imageButton22"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:src="@drawable/go_icon"
            android:layout_marginEnd="13dp"
            android:background="#fff"
            android:layout_centerInParent="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:onClick="get_code2"
            />

    </RelativeLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="2dp"
        android:background="#c0c0c0"
        android:padding="5dp"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="95dp"
        android:orientation="horizontal"


        android:padding="12dp"
        >

        <TextView

            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textSize="20sp"
            android:text="     Final Markdown"
            android:textColor="#000"

            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_toStartOf="@+id/imageButton"
            android:onClick="get_code3"
           />

        <ImageButton
            android:id="@+id/imageButton"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:src="@drawable/go_icon"
            android:layout_marginEnd="13dp"
            android:background="#fff"

           android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_centerInParent="true"
            android:onClick="get_code3"
           />

    </RelativeLayout>

</LinearLayout>
